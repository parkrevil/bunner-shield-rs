{
  "rules": {
    "type": {
      "level": "error",
      "options": [
        "build",
        "chore",
        "ci",
        "docs",
        "feat",
        "fix",
        "perf",
        "refactor",
        "revert",
        "style",
        "test"
      ]
    },
    "type-format": {
      "level": "error",
      "format": "^[a-z][a-z0-9-]*$"
    },
    "type-empty": {
      "level": "error"
    },
    "description-empty": {
      "level": "error"
    },
    "description-format": {
      "level": "error",
      "format": "^[a-z0-9].*"
    },
    "description-max-length": {
      "level": "error",
      "length": 73
    },
    "subject-empty": {
      "level": "error"
    }
  }
}
